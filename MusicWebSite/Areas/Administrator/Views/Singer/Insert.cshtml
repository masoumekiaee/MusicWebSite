@model MusicWebSite.Models.Singer
@{
    ViewBag.Title = "Insert";
}

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">

            @using (Html.BeginForm("Insert", "Singer", FormMethod.Post, new { @class = "", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <h2>درج خواننده</h2>
                <hr class="colorgraph">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-9">
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.FarsiName, new { @class = "form-control input-lg", placeholder = Html.DisplayNameFor(s => s.FarsiName), tabindex = "1" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-9">
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.EngName, new { @class = "form-control input-lg", placeholder = Html.DisplayNameFor(s => s.EngName), tabindex = "2" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12">
                        <div class="form-group">
                            @Html.TextAreaFor(m => m.Description, new { @class = "form-control input-lg", placeholder = Html.DisplayNameFor(s => s.Description), tabindex = "3", rows = "5" })
                        </div>
                    </div>
                </div>
                <hr class="colorgraph">
                <div class="row">
                    <div class="col-xs-12 col-md-6"><input type="submit" value="درج" class="btn btn-primary btn-block btn-lg" tabindex="7"></div>
                    <div class="col-xs-12 col-md-6"><a href="@Url.Action("Index")" class="btn btn-success btn-block btn-lg">بازگشت</a></div>
                </div>

            }
        </div>
    </div>
</div>
