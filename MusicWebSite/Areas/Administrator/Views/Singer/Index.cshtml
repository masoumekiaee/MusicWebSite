@model List<MusicWebSite.Models.Singer>
@using MusicWebSite.Models
@{
    ViewBag.Title = "Index";
}
<div class="container">
    <div class="col-xs-12 col-sm-8 col-md-12 row singer-manager">
        <h2>خوانندگان</h2>
        <hr class="colorgraph">
        @if (Model != null && Model.Count > 0)
        {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">نام فارسی</th>
                    <th scope="col">نام انگلیسی</th>
                    <th scope="col">توضیحات</th>
                    <th scope="col">مدیریت</th>
                </tr>
            </thead>
            <tbody>
                @{

                    foreach (Singer item in Model)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.FarsiName</td>
                            <td>@item.EngName</td>
                            @if (item.Description != null)
                            {
                                if (item.Description.Length > 30)
                                {
                                    <td>@(item.Description.Substring(0, 30))</td>
                                }
                                else
                                {
                                    <td>@(item.Description ?? "")</td>
                                }
                            }
                            <td> </td>

                            <td class="manage">
                                <a class="edit" href="@Url.Action("Edit","Singer", new { Area = "Administrator", id = item.Id })">ویرایش</a>
                                <a class="delete" href="@Url.Action("Delete","Singer", new { Area = "Administrator", id = item.Id })">حذف</a>
                            </td>
                        </tr>
                    }
                }


            </tbody>
        </table>
        }
        else
        {
            <p style="margin: 20px auto; text-align: center">خواننده‌ای درج نشده است</p>
        }
    </div>
    <div class="row col-xs-3 col-sm-3 col-md-3">
        <a href="@Url.Action("Insert")" class="btn btn-success btn-block btn-lg">درج خواننده</a>
    </div>
</div>